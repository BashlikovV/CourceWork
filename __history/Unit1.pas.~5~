unit Unit1;
{Input control function}

interface
  function InputControl:Integer;


implementation

uses
  System.SysUtils;

function InputControl:Integer;  //Function for input testing
var
  FuncInput: string;
  X: Integer;
  Error: Integer;
  //FuncInput, X, Error - value for val function

begin
  Error := 0;
  Repeat
    ReadLn(FuncInput);
    val(FuncInput, X, Error);
    If (Error <> 0) then
      Writeln('Incorrect value')
    else if (Error = 0) then
      InputControl := X;
  Until (Error = 0);
end;

end.
